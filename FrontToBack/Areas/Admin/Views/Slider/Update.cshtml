@model Slide
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Old Photo</h4>
                <img src="~/img/@Model.Name" style="width:400px; height:300px; border-radius:0;" alt="Alternate Text" />
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <form class="forms-sample" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="File"></label>
            <input class="form-control" asp-for="File" accept="image/*">
            <span class="text-danger" asp-validation-for="File"></span>
        </div>
        <button type="submit" class="btn btn-warning mr-2">Update</button>
        <a class="btn btn-dark" asp-action="Index">Go Back</a>
    </form>
</div>

