@model List<BasketVM>
@{
    ViewData["Title"] = "Basket";
    double Total = 0;
}

<div class="container">
    <div class="row mt-3">
        @if (Model.Count != 0)
        {
            <div class="col-12">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Count</th>
                            <th scope="col">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (BasketVM item in Model)
                        {
                            double total = item.Price * item.Count;
                            Total += total;
                            <tr>
                                <td>
                                    <img src="~/img/@item.Image" width="200px" />
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Count</td>
                                <td>@total</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-12">
                <p>Total:@Total</p>
            </div>
        }
        else
        {
            <p>Sebet boshdur</p>
        }
    </div>
</div>

